{
	"parser": "babel-eslint",

	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"eqeqeq": 2,
		"no-console": 0,
		"indent": [2, "tab"],
		"quotes": [2, "single"],
		"linebreak-style": [2, "unix"],
		"semi": [2, "always"],
		"no-unused-vars": 0
	},
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"extends": "eslint:recommended"
}
