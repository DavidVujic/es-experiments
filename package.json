{
	"name": "es-experiments",
	"version": "1.0.0",
	"description": "ES2015, ES2016 and ES next experimenting",
	"main": "index.js",
	"scripts": {
		"deps:babel": "cp node_modules/babel-polyfill/dist/polyfill.min.js lib/vendor/babel-polyfill.min.js",
		"deps:requirejs": "uglifyjs node_modules/requirejs/require.js -c -m -o lib/vendor/require.min.js",
		"deps:cleanup-helpers": "rm -rf lib/vendor/babel-helpers.js",
		"deps:minify-helpers": "uglifyjs lib/vendor/babel-helpers.js -c -m -o lib/vendor/babel-helpers.min.js",
		"deps:create-helpers": "babel-external-helpers -t var >lib/vendor/babel-helpers.js",
		"deps:helpers": "npm run deps:create-helpers && npm run deps:minify-helpers && npm run deps:cleanup-helpers",
		"deps": "npm run deps:babel && npm run deps:requirejs && npm run deps:helpers",
		"transpile": "babel --plugins transform-es2015-modules-amd src -d lib/modules",
		"lint": "eslint src",
		"clean": "rm -rf lib/modules/*",
		"watch": "nodemon --watch src/ --exec 'npm run transpile'",
		"build": "npm run clean && npm run lint -s && npm run transpile && npm run deps",
		"web": "live-server --watch=lib/modules/",
		"repl": "babel-node"
	},
	"author": "David Vujic",
	"license": "MIT",
	"devDependencies": {
		"babel-cli": "^6.8.0",
		"babel-eslint": "^6.0.4",
		"babel-plugin-external-helpers": "^6.8.0",
		"babel-plugin-transform-es2015-modules-amd": "^6.8.0",
		"babel-preset-es2015": "^6.6.0",
		"babel-preset-stage-1": "^6.5.0",
		"babel-preset-stage-2": "^6.5.0",
		"babel-preset-stage-3": "^6.5.0",
		"eslint": "^2.10.2",
		"live-server": "^1.0.0",
		"nodemon": "^1.9.2",
		"uglify-js": "^2.6.2"
	},
	"dependencies": {
		"babel-polyfill": "^6.8.0",
		"requirejs": "^2.2.0"
	}
}
