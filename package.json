{
  "name": "es-experiments",
  "version": "1.0.0",
  "description": "ES2015, ES2016 and ES next experimenting",
  "main": "index.js",
  "scripts": {
    "deps:babel": "cp node_modules/babel-polyfill/dist/polyfill.min.js lib/vendor/babel-polyfill.min.js",
    "deps:requirejs": "uglifyjs node_modules/requirejs/require.js -c -m -o lib/vendor/require.min.js",
    "deps": "npm run deps:babel && npm run deps:requirejs",
    "transpile": "babel src -d lib/modules",
    "lint": "eslint src",
    "clean": "rm -rf lib/modules/*",
    "build": "npm run clean && npm run lint -s && npm run deps && npm run transpile",
		"watch": "nodemon --watch src/ --exec 'npm run transpile'",
    "web": "live-server --watch=lib/modules/"
  },
  "author": "David Vujic",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^4.1.8",
    "babel-plugin-transform-es2015-modules-amd": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "eslint": "^2.1.0",
    "live-server": "^0.9.2",
    "nodemon": "^1.8.1",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "requirejs": "^2.1.22"
  }
}
